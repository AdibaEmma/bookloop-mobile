# ============================================
# BookLoop Mobile App - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Application
# ============================================
EXPO_PUBLIC_ENV=development
EXPO_PUBLIC_APP_NAME=BookLoop
EXPO_PUBLIC_APP_VERSION=1.0.0

# ============================================
# API Configuration
# ============================================
# Development (local)
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_PREFIX=api
EXPO_PUBLIC_API_VERSION=v1

# For physical device testing, use your local IP address
# Find your IP: ifconfig (Mac/Linux) or ipconfig (Windows)
# Example: EXPO_PUBLIC_API_URL=http://192.168.1.100:3000

# Android Emulator uses 10.0.2.2 to access host machine
# iOS Simulator can use localhost

# Production (use when deploying)
# EXPO_PUBLIC_API_URL=https://api.bookloop.gh

# API Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# ============================================
# Cloudinary (Direct Image Uploads)
# ============================================
# Get from: https://cloudinary.com/console
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=bookloop_listings
EXPO_PUBLIC_CLOUDINARY_API_KEY=your_api_key

# Upload folders
EXPO_PUBLIC_CLOUDINARY_LISTING_FOLDER=listings
EXPO_PUBLIC_CLOUDINARY_PROFILE_FOLDER=profiles
EXPO_PUBLIC_CLOUDINARY_GHANA_CARD_FOLDER=ghana_cards

# ============================================
# Mapbox (Maps & Location)
# ============================================
# Get token: https://account.mapbox.com
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_public_token
EXPO_PUBLIC_MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12

# Default map center (Accra, Ghana)
EXPO_PUBLIC_MAP_DEFAULT_LAT=5.6037
EXPO_PUBLIC_MAP_DEFAULT_LNG=-0.1870
EXPO_PUBLIC_MAP_DEFAULT_ZOOM=12

# ============================================
# Firebase (Cloud Messaging - FCM)
# ============================================
# Get from: Firebase Console → Project Settings → General
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Search & Filters (Default Values)
# ============================================
EXPO_PUBLIC_DEFAULT_SEARCH_RADIUS=5
EXPO_PUBLIC_MIN_SEARCH_RADIUS=1
EXPO_PUBLIC_MAX_SEARCH_RADIUS=25
EXPO_PUBLIC_LISTINGS_PER_PAGE=20

# ============================================
# Image Upload Configuration
# ============================================
EXPO_PUBLIC_MAX_IMAGES_PER_LISTING=3
EXPO_PUBLIC_MAX_IMAGE_SIZE_MB=5
EXPO_PUBLIC_IMAGE_QUALITY=0.8
EXPO_PUBLIC_IMAGE_MAX_WIDTH=1500
EXPO_PUBLIC_IMAGE_MAX_HEIGHT=1500

# ============================================
# OTP Configuration
# ============================================
EXPO_PUBLIC_OTP_LENGTH=6
EXPO_PUBLIC_OTP_RESEND_COOLDOWN=60
EXPO_PUBLIC_OTP_MAX_ATTEMPTS=3

# ============================================
# Phone Number (Ghana Format)
# ============================================
EXPO_PUBLIC_PHONE_COUNTRY_CODE=+233
EXPO_PUBLIC_PHONE_LENGTH=9
EXPO_PUBLIC_PHONE_PLACEHOLDER=XX XXX XXXX

# ============================================
# QR Code Configuration
# ============================================
EXPO_PUBLIC_QR_CODE_SIZE=300
EXPO_PUBLIC_QR_CODE_EXPIRY_MINUTES=10

# ============================================
# Theme & Branding
# ============================================
# Colors (from UPDATED_DESIGN_DOCUMENT.md)
EXPO_PUBLIC_COLOR_PRIMARY=#8B5E3C
EXPO_PUBLIC_COLOR_ACCENT=#FFD580
EXPO_PUBLIC_COLOR_BACKGROUND=#F4E1C1
EXPO_PUBLIC_COLOR_TEXT_PRIMARY=#4A3528
EXPO_PUBLIC_COLOR_TEXT_SECONDARY=#D4B896

# ============================================
# Feature Flags
# ============================================
EXPO_PUBLIC_FEATURE_WHATSAPP_BOT=false
EXPO_PUBLIC_FEATURE_DELIVERY=false
EXPO_PUBLIC_FEATURE_BOOST_LISTINGS=true
EXPO_PUBLIC_FEATURE_SERVICE_FEE=true
EXPO_PUBLIC_FEATURE_WISHLIST=false
EXPO_PUBLIC_FEATURE_CHAT=false

# ============================================
# Analytics (Optional)
# ============================================
# PostHog
EXPO_PUBLIC_POSTHOG_API_KEY=your_posthog_api_key
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com
EXPO_PUBLIC_ANALYTICS_ENABLED=false

# ============================================
# Sentry (Error Tracking)
# ============================================
EXPO_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
EXPO_PUBLIC_SENTRY_ENABLED=false

# ============================================
# Deep Linking
# ============================================
EXPO_PUBLIC_SCHEME=bookloop
EXPO_PUBLIC_DEEP_LINK_URL=bookloop://

# ============================================
# Development Tools
# ============================================
# Show debug info in app
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Simulate slow network (for testing)
EXPO_PUBLIC_SIMULATE_SLOW_NETWORK=false

# Mock API responses (for offline testing)
EXPO_PUBLIC_USE_MOCK_API=false

# ============================================
# App Store / Play Store
# ============================================
EXPO_PUBLIC_APP_STORE_ID=your_app_store_id
EXPO_PUBLIC_PLAY_STORE_ID=com.bookloop.app
EXPO_PUBLIC_SUPPORT_EMAIL=support@bookloop.gh
EXPO_PUBLIC_SUPPORT_WHATSAPP=+233500000000

# ============================================
# Legal & Privacy
# ============================================
EXPO_PUBLIC_TERMS_URL=https://bookloop.gh/terms
EXPO_PUBLIC_PRIVACY_URL=https://bookloop.gh/privacy
EXPO_PUBLIC_CONTACT_EMAIL=hello@bookloop.gh

# ============================================
# Expo Configuration
# ============================================
# EAS Build configuration (optional)
# EAS_PROJECT_ID=your_expo_project_id
